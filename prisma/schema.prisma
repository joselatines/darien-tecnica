generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Espacio {
  id          String   @id @default(cuid())
  name        String   @unique
  location    String
  capacity    Int
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reservas Reserva[]
}

